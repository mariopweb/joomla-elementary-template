                <field name="copyright" type="list" default="1" label="PLG_SIGE_COPYRIGHT" description="PLG_SIGE_COPYRIGHT_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
            <fieldset name="SIGE_THUMBNAIL">
                <field type="krdonationcodecheck"/>
                <field name="width" type="text" default="200" size="5" label="PLG_SIGE_WIDTHTHUMBS" description="PLG_SIGE_WIDTHTHUMBS_DESC"/>
                <field name="height" type="text" default="200" size="5" label="PLG_SIGE_HEIGHTTHUMBS" description="PLG_SIGE_HEIGHTTHUMBS_DESC"/>
                <field name="ratio" type="list" default="1" label="PLG_SIGE_RATIO" description="">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="calcmaxthumbsize" type="list" default="1" label="PLG_SIGE_CALCMAXTHUMBSIZE" description="PLG_SIGE_CALCMAXTHUMBSIZE_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="quality" type="text" default="80" size="5" label="PLG_SIGE_QUALITYJPG" description="PLG_SIGE_QUALITYJPG_DESC"/>
                <field name="quality_png" type="text" default="6" size="5" label="PLG_SIGE_QUALITYPNG" description="PLG_SIGE_QUALITYPNG_DESC"/>
                <field name="thumbdetail" type="list" default="0" label="PLG_SIGE_THUMBNAILDETAIL" description="PLG_SIGE_THUMBNAILDETAIL_DESC">
                    <option value="0">1:1</option>
                    <option value="1">PLG_SIGE_TOPLEFT</option>
                    <option value="2">PLG_SIGE_TOPRIGHT</option>
                    <option value="3">PLG_SIGE_BOTTOMLEFT</option>
