            <fieldset name="SIGE_IMAGE">
                <field type="krdonationcodecheck"/>
                <field name="resize_images" type="list" default="0" label="PLG_SIGE_RESIZEIMAGES" description="PLG_SIGE_RESIZEIMAGES_DESC">
