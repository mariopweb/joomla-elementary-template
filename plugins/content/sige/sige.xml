                    <option value="0">JNO</option>
                </field>
                <field name="images_new" type="list" default="0" label="PLG_SIGE_IMAGESNEW" description="PLG_SIGE_IMAGESNEW_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="width_image" type="text" default="800" size="5" label="PLG_SIGE_WIDTHIMAGETHUMBS" description="PLG_SIGE_WIDTHIMAGETHUMBS_DESC"/>
                <field name="height_image" type="text" default="800" size="5" label="PLG_SIGE_HEIGHTIMAGETHUMBS" description="PLG_SIGE_HEIGHTIMAGETHUMBS_DESC"/>
                <field name="ratio_image" type="list" default="1" label="PLG_SIGE_RATIOIMAGE" description="">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
            <fieldset name="SIGE_JSVIEW">
                <field type="krdonationcodecheck"/>
                <field name="image_info" type="list" default="1" label="PLG_SIGE_IMAGEINFO" description="PLG_SIGE_IMAGEINFO_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="fileinfo" type="list" default="0" label="PLG_SIGE_FILEINFO" description="PLG_SIGE_FILEINFO_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="iptc" type="list" default="0" label="PLG_SIGE_IPTC" description="PLG_SIGE_IPTC_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="iptcutf8" type="list" default="0" label="PLG_SIGE_IPTCUTF8" description="PLG_SIGE_IPTCUTF8_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="download" type="list" default="0" label="PLG_SIGE_DOWNLOAD" description="PLG_SIGE_DOWNLOAD_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="print" type="list" default="0" label="PLG_SIGE_PRINT" description="PLG_SIGE_PRINT_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="displaynavtip" type="list" default="0" label="PLG_SIGE_DISPLAYNAVTIP" description="">
