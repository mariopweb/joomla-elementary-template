    <description>PLG_SIGE_XML_DESCRIPTION</description>
    <files>
        <filename plugin="sige">sige.php</filename>
        <filename plugin="sige">index.html</filename>
        <folder plugin="sige">plugin_sige</folder>
        <folder plugin="sige">fields</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_sige.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_sige.sys.ini</language>
        <language tag="de-DE">language/de-DE/de-DE.plg_content_sige.ini</language>
        <language tag="de-DE">language/de-DE/de-DE.plg_content_sige.sys.ini</language>
    </languages>
    <updateservers>
        <server type="extension" priority="1" name="PLG_SIGE">https://check.kubik-rubik.de/updates/sige.xml</server>
    </updateservers>
    <config>
        <fields name="params" addfieldpath="/plugins/content/sige/fields">
            <fieldset name="SIGE_GALLERY">
                <field type="krdonationcodecheck"/>
                <field name="thumbs" type="list" default="1" label="PLG_SIGE_THUMBS" description="PLG_SIGE_THUMBS_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="thumbs_new" type="list" default="0" label="PLG_SIGE_THUMBSNEW" description="PLG_SIGE_THUMBSNEW_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="root" type="list" default="0" label="PLG_SIGE_ROOT" description="PLG_SIGE_ROOT_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="gap_v" type="text" default="30" size="5" label="PLG_SIGE_GAPV" description="PLG_SIGE_GAPV_DESC"/>
                <field name="gap_h" type="text" default="30" size="5" label="PLG_SIGE_GAPH" description="PLG_SIGE_GAPH_DESC"/>
                <field name="sort" type="list" default="2" label="PLG_SIGE_SORT" description="PLG_SIGE_SORT_DESC">
                    <option value="1">PLG_SIGE_RANDOM</option>
                    <option value="2">PLG_SIGE_NOASC</option>
                    <option value="3">PLG_SIGE_NODESC</option>
                    <option value="4">PLG_SIGE_TIMEASC</option>
                    <option value="5">PLG_SIGE_TIMEDESC</option>
                    <option value="6">PLG_SIGE_SORTFROMFILE</option>
                </field>
                <field name="view" type="list" default="7" label="PLG_SIGE_VIEW" description="PLG_SIGE_VIEW_DESC">
                    <option value="0">Slimbox</option>
                    <option value="1">Lytebox</option>
                    <option value="2">Lyteshow</option>
                    <option value="3">Shadowbox</option>
                    <option value="4">Milkbox</option>
                    <option value="5">Slimbox 2</option>
                    <option value="6">Venobox</option>
                    <option value="7">PhotoSwipe</option>
                </field>
                <field name="js" type="list" default="7" label="PLG_SIGE_JS" description="PLG_SIGE_JS_DESC">
                    <option value="0">JNO</option>
                    <option value="1">PLG_SIGE_SLIMBOXJS</option>
                    <option value="2">PLG_SIGE_LYTEBOXJS</option>
                    <option value="3">PLG_SIGE_SHADOWBOXJS</option>
                    <option value="4">PLG_SIGE_MILKBOXJS</option>
                    <option value="5">PLG_SIGE_SLIMBOX2JS</option>
                    <option value="6">PLG_SIGE_VENOBOXJS</option>
                    <option value="7">PLG_SIGE_PHOTOSWIPEJS</option>
                </field>
                <field name="limit" type="list" default="0" label="PLG_SIGE_LIMIT" description="PLG_SIGE_LIMIT_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="limit_quantity" type="text" default="10" size="5" label="PLG_SIGE_LIMITQUANTITY" description="PLG_SIGE_LIMITQUANTITY_DESC"/>
                <field name="column_quantity" type="text" default="" size="5" label="PLG_SIGE_COLUMNQUANTITY" description="PLG_SIGE_COLUMNQUANTITY_DESC"/>
                <field name="css_image" type="list" default="0" label="PLG_SIGE_CSSIMAGE" description="PLG_SIGE_CSSIMAGE_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="css_image_half" type="list" default="0" label="PLG_SIGE_CSSIMAGEHALF" description="PLG_SIGE_CSSIMAGEHALF_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="noslim" type="list" default="0" label="PLG_SIGE_NOSLIM" description="PLG_SIGE_NOSLIM_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="list" type="list" default="0" label="PLG_SIGE_LIST" description="PLG_SIGE_LIST_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="caption" type="list" default="0" label="PLG_SIGE_CAPTION" description="PLG_SIGE_CAPTION_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="image_link" type="text" default="" size="50" label="PLG_SIGE_IMAGELINK" description="PLG_SIGE_IMAGELINK_DESC"/>
