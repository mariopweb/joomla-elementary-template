<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site" method="upgrade">
    <name>elementary</name>
    <version>1.0.0</version>
    <creationDate>May 2020</creationDate>
    <author>mariop</author>
    <authorEmail>mariopweb@gmail.com</authorEmail>
    <copyright>Copyright (C) 2020. All rights reserved.</copyright>
    <description>TPL_ELEMENTARY_XML_DESCRIPTION</description>
    <files>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <folder></folder>
    </files>
    <positions>
		<position>top</position>
		<position>search</position>
		<position>header-right</position>
		<position>main-menu</position>
		<position>promo-left</position>
		<position>promo</position>
		<position>promo-right</position>
		<position>content-top</position>
		<position>left-menu</position>
		<position>mainbody-left</position>
		<position>mainbody-right</position>
		<position>breadcrumbs</position>
		<position>user-top</position>
		<position>user-bottom</position>
		<position>content-bottom</position>
		<position>footer</position>
	</positions>
    <languages folder="language">
        <language tag="pl-PL">pl-PL/pl-PL.tpl_elementary.ini</language>
        <language tag="pl-PL">pl-PL/pl-PL.tpl_elementary.sys.ini</language>
        <language tag="pl-PL">en-GB/en-GB.tpl_elementary.ini</language>
        <language tag="pl-PL">en-GB/en-GB.tpl_elementary.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field 
                    name="sitename"
                    type="text"
                    label="TPL_ELEMENTARY_SITENAME"
                    defualt=""
                    description="TPL_ELEMENTARY_SITENAME_DESC"
                    filter="string"
                />
                <field 
                    name="sitedescription"
                    type="text"
                    label="JGLOBAL_DESCRIPTION"
                    default=""
                    description="JGLOBAL_SUBHEADING_DESC"
                    filter="string"
                    />
                <field
                    name="themecolor"
                    type="list"
                    label="TPL_ELEMENTARY_THEMECOLOR_LABEL"
                    description="TPL_ELEMENTARY_THEMECOLOR_DESC"
                    default="red"
                    filter="word"
                >
                <option value="red">TPL_ELEMENTARY_THEMECOLOR_RED</option>
                </field>
            </fieldset>
        </fields>
    </config>
    
</extension>